<h1>Edit Movie #<%= @the_movie.id %></h1>

<p>
  <a href="/movies/<%= @the_movie.id %>" target="_blank">View Movie Details 
  </a>
</p>

<form action="/backdoor/modify_movie/<%= @the_movie.id %>" method="post"
  <div>
    <label for="movie_title">Title</label>
    <input type="text" id="movie_title" name="query_title" value="<%= @the_movie.title %>">
  </div>

  <div>
    <label for="movie_year">Year</label>
    <input type="text" id="movie_year" name="query_year" value="<%= @the_movie.year %>">
  </div>

  <div>
    <label for="movie_description">Description</label>
    <textarea id="movie_description" name="query_description" value="<%= @the_movie.description %>">
  </div>

  <div>
    <label for="director_bio">Bio</label>
    <textarea id="director_bio" name="query_bio" rows="3"><%= @the_director.bio %>
    </textarea>
  </div>

  <div>
    <label for="director_image">Image URL<label>
    <input type="text" id="director_image" name="query_image" value="<%= @the_director.image %>">
  </div>


  <button type="submit">
    Update Director
  </button>
</form>
